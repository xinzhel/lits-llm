# =============================================================================
# LiTS Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# --- LLM Provider Keys ---
OPENAI_API_KEY=""
OPENAI_MODEL_NAME=""          # e.g. openai/gpt-4.1-mini-2025-04-14
HF_TOKEN=""                   # HuggingFace access token

# --- AWS Credentials (for Bedrock / Location Service) ---
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_SESSION_TOKEN=""
AWS_REGION="us-east-1"

# --- Amazon Location Service ---
AMAZON_LOCATION_API_KEY=""

# --- Database (MapEval / Clue) ---
db_name="clue"
db_user_name=""
db_user_password=""
db_host="localhost"
db_port=5432
db_schema="public"

# --- TGI (Text Generation Inference) ---
TGI_ENDPOINT=""               # e.g. http://localhost:8080

# --- PDF / Embedding ---
EMBEDDING_MODEL_NAME="all-MiniLM-L6-v2"

# --- Planners (BlocksWorld) ---
FAST_DOWNWARD=""              # Path to Fast Downward planner
VAL=""                        # Path to VAL validator
